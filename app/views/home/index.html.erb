<h1>Home page</h1>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>

<form id="upload_form">
  <button id="upload_button" class="cloudinary-button">Upload files</button>
</form>

<br>

<video controls id="video_player"  style="width: 100%; max-width: 600px; max-height: 600px"></video>

<script>
    let myWidget = cloudinary.createUploadWidget({
        cloudName: 'dk1bmznee',
        uploadPreset: 'docs_upload_example_us_preset',
        resourceType: 'video'
    }, (error, result) => {
        if (!error && result && result.event === "success") {

            console.log(result.info);

            let videoUrl = result.info.url.replace(/\.mov$/, ".mp4");

            document.getElementById('video_player').src = videoUrl;
        }
    });

    document.getElementById('upload_button').addEventListener('click', function () {
        myWidget.open();
    });
</script>